{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "baseUrl": "./src",
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "latest"
    }
  },
  "plugins": ["react", "react-hooks"],
  "parser": "babel-eslint",
  "rules": {
    "semi": [2, "always"],
    "react/display-name": "off",
    "space-before-function-paren": 0
  }
}
